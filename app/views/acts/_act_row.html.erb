<div class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8 rounded-lg bg-white shadow-lg p-6 mt-3 mb-6">
  <h2 class="text-xl font-bold text-gray-900"><%= t :history %></h2>
  <% @acts.each do |act| %>
    <a href="<%= act_path(act) %>" class="flex justify-between items-center py-4 hover:bg-gray-100 transition duration-150">
      <div class="flex items-center space-x-4">
        <% if act.previous_act.present? %>
          <%= image_tag(act.previous_act.user.avatar.url, class: 'w-8 h-8 rounded-full') %>
          <span class="text-gray-900 font-medium text-md"><%= act.previous_act.user.name %></span>
        <% else %>
          <span class="text-gray-500 font-medium text-md"><%= t :no_user %></span>
        <% end %>
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        <%= image_tag(act.user.avatar.url, class: 'w-8 h-8 rounded-full') %>
        <span class="text-gray-900 font-medium text-md"><%= act.user.name %></span>
      </div>
      <div class="text-gray-500 text-sm">
      <% if act.previous_act %>
    <% if act.previous_act.intstrument_state != act.intstrument_state %>
      <strong><%= t("states.#{act.previous_act.intstrument_state}") %> > <%= t("states.#{act.intstrument_state}") %></strong>
    <% else %>
      <%= t("states.#{act.previous_act.intstrument_state}") %> > <%= t("states.#{act.intstrument_state}") %>
    <% end %>
  <% else %>
    <%= t("states.#{act.intstrument_state}") %>
  <% end %>
      </div>
      <div class="text-gray-500 text-sm">
        <%= act.created_at.strftime('%d.%m.%Y %H:%M') %>
      </div>
    </a>
  <% end %>
</div>