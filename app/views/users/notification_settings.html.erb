<%= form_for @user, url: update_notification_settings_path do |f| %>
  <div class="mt-4">
    <%= f.check_box :notify_new_act, class: "mr-1 form-checkbox h-5 w-5 text-gray-600" %>
    <%= f.label t :notify_new_act, class: "font-bold" %>
  </div>
  
  <div class="mt-4">
    <%= f.check_box :notify_change_state, class: "mr-1 form-checkbox h-5 w-5 text-gray-600" %>
    <%= f.label t :notify_change_state, class: "font-bold" %>
  </div>
  
  <div class="mt-4">
    <%= f.check_box :notify_delete_instrument, class: "mr-1 form-checkbox h-5 w-5 text-gray-600" %>
    <%= f.label t :notify_delete_instrument, class: "font-bold" %>
  </div>
  
  <div class="mt-4">
    <%= f.check_box :notify_change_instrument, class: "mr-1 form-checkbox h-5 w-5 text-gray-600" %>
    <%= f.label t :notify_change_instrument, class: "font-bold" %>
  </div>
  
  <%= f.submit "#{ t :update }", class: "mt-4 py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75" %>
<% end %>
