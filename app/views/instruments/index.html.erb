<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="font-bold text-4xl"><%= t :instruments %></h1>
    <%= link_to "#{ t :create }", new_instrument_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6 mt-3 mb-3 visible sm:invisible sm:absolute sm:z-10">
    <% @instruments.each do |instrument| %>
    <div class="border-b-2 py-3 px-6 text-left whitespace-nowrap inline-flex items-center w-full">
      <%= link_to "#{instrument.name} #{"(#{instrument.last_act.user.name})" if instrument.last_act && instrument.last_act.user}", instrument_path(instrument), class: "text-blue-500 text-xl" %>&nbsp;&nbsp;<%= image_tag(instrument.images.first.thumb.url, class: "w-16 h-16 rounded-lg") if instrument.images.first %>
    </div><br>
    <% end %>
    </div>

  <div class="container w-full mx-auto px-2 mt-5 invisible absolute sm:visible sm:relative sm:z-20">
  <div id='recipients' class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">
			<table id="example" class="stripe hover" style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
				<thead>
					<tr>
						<th data-priority="1"><%= t :instrument %></th>
						<th data-priority="2"><%= t :state %></th>
						<th data-priority="3"><%= t :price %></th>
					</tr>
				</thead>
				<tbody>
    <%= render @instruments %>
  </tbody>
			</table>
		</div>
		<!--/Card-->
	</div>

    
